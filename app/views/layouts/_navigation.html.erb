<header>
  <ul id="dropdown1" class="dropdown-content">
    <%= render 'layouts/dropdown_menu' %>
  </ul>
  <ul id="dropdown2" class="dropdown-content">
    <%= render 'layouts/dropdown_menu' %>
  </ul>
  <nav>
    <div class="container">
      <div class="nav-wrapper">
        <%= link_to 'University', root_path, class: 'brand-logo right' %>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="left hide-on-med-and-down">
          <%= render 'layouts/menu' %>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Account<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
      </div>
    </div>
  </nav>
  <ul class="sidenav" id="mobile-demo">
    <%= render 'layouts/menu' %>
    <li><a href="#" class="dropdown-trigger" data-target="dropdown2">Account<i class="material-icons right">navigate_next</i></a></li>
  </ul>
  <% flash.each do |key, message| %>
    <div class="container">
      <div class="row sign-up-form">
        <div class="col s12 m12 l12">
          <div class="card-panel green lighten-2" id=fade-out-target>
            <span class="white-text">
              <%= message %>
            </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</header>